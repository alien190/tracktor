<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_margin="@dimen/margin"
    app:cardCornerRadius="@dimen/corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="@dimen/map_preview_size"
            android:layout_height="@dimen/map_preview_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvLabelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/ivPreview"
            android:layout_toRightOf="@+id/ivPreview"
            android:text="@string/label_id"
            tools:text="Id элемента:" />

        <ImageView
            android:id="@+id/ivDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvLabelId"
            android:layout_alignBottom="@+id/tvLabelId"
            android:scaleType="fitStart"
            android:src="@drawable/ic_expand_more_black_24dp"/>

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/tvLabelId"
            android:layout_toRightOf="@+id/tvLabelId"
            tools:text="1" />



        <TextView
            android:id="@+id/tvLabelStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLabelId"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/ivPreview"
            android:layout_toRightOf="@+id/ivPreview"
            android:text="@string/label_start"
            tools:text="Начало:" />

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvLabelStart"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/tvLabelStart"
            android:layout_toRightOf="@+id/tvLabelStart"
            tools:text="10.10.2018 00:00:10" />

        <TextView
            android:id="@+id/tvLabelDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLabelStart"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/ivPreview"
            android:layout_toRightOf="@+id/ivPreview"
            android:text="@string/label_duration"
            tools:text="Продолжительность:" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvLabelDuration"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/tvLabelDuration"
            android:layout_toRightOf="@+id/tvLabelDuration"
            tools:text="00:00:10" />

        <TextView
            android:id="@+id/tvLabelDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLabelDuration"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/ivPreview"
            android:layout_toRightOf="@+id/ivPreview"
            android:text="@string/label_distance"
            tools:text="Дистанция:" />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvLabelDistance"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/tvLabelDistance"
            android:layout_toRightOf="@+id/tvLabelDistance"
            tools:text="100500 м" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlDetail"
            android:layout_below="@+id/ivPreview"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvLabelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="@string/speedLabel"
                tools:text="Средняя скорость:" />

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvLabelSpeed"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toEndOf="@+id/tvLabelSpeed"
                android:layout_toRightOf="@+id/tvLabelSpeed"
                tools:text="150 км/ч" />

            <TextView
                android:id="@+id/tvLabelCalories"
                android:layout_below="@+id/tvLabelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="@string/caloriesLabel"
                tools:text="Истрачено калорий:" />

            <TextView
                android:id="@+id/tvCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvLabelCalories"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toEndOf="@+id/tvLabelCalories"
                android:layout_toRightOf="@+id/tvLabelCalories"
                tools:text="150 Ккал" />

            <TextView
                android:id="@+id/tvLabelAction"
                android:layout_below="@+id/tvLabelCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="@string/actionLabel"
                tools:text="Тип деятельности:" />

            <TextView
                android:id="@+id/tvAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvLabelAction"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toEndOf="@+id/tvLabelAction"
                android:layout_toRightOf="@+id/tvLabelAction"
                tools:text="Ходьба" />

            <TextView
                android:id="@+id/tvLabelComment"
                android:layout_below="@+id/tvLabelAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="@string/commentLabel"
                tools:text="Комментарий:" />

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvLabelComment"
                android:layout_marginLeft="@dimen/margin"
                android:layout_toEndOf="@+id/tvLabelComment"
                android:layout_toRightOf="@+id/tvLabelComment"
                tools:text="Хорошая прогулка Хорошая прогулка Хорошая прогулка Хорошая прогулка Хорошая прогулка Хорошая прогулка" />
            <ImageButton
                android:id="@+id/ibEditComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvComment"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_edit_black_24dp"/>

        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
